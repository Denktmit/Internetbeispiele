<Application x:Class="LoginDemoClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LoginDemoClient.ViewModels"
             xmlns:view="clr-namespace:LoginDemoClient.Views"
             StartupUri="Views\FrameWindow.xaml">
    
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <view:LoginView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:MainViewModel}">
            <view:MainScreen />
        </DataTemplate>

    </Application.Resources>
</Application>
